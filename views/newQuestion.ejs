<%- include('topHTML.ejs') %>
    <div class="wrapper">
        <%- include('navbar.ejs') %>
        <div class="bg-gray-50 dark:bg-gray-900 flex flex-col px-10 py-8 mx-auto md:h-screen lg:py-0 wrapper-element w-full ">
            <div class="px-10 py-10">
                <h1 class="text-white text-4xl font-semibold inline">New Question</h1>
            </div>
            <div class="text-white px-10 py-3">
                <form action="/new-question/<%=electionDetail.id%>" method="post">
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    <label for="text" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">What's the question?</label>
                    <input type="text" name="question" id="question" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Vote for the position of class monitor 2023" required="">

                    <label for="text" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white pt-5">Description</label>
                    <input type="text" name="description" id="description" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Description goes here" required="">

                    <button type="submit" class="text-white mt-5 bg-purple-700 hover:bg-purple-800 font-medium rounded px-5 py-2 inline-block">Submit</button>
                </form>
            </div>
        </div>
    </div>
<%- include('bottomHTML.ejs') %>