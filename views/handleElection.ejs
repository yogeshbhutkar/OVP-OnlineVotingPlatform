<%- include('topHTML.ejs') %>
    <div class="wrapper">
        <%- include('navbar.ejs') %>
        <div class="bg-gray-50 dark:bg-gray-900 flex flex-col px-10 py-8 mx-auto md:h-screen lg:py-0 wrapper-element w-full ">
            <div class="px-10 py-10">
                <h1 class="text-white text-4xl font-semibold inline"><%= electionDetail.name %></h1>
                <a href="/edit-election-title/<%= electionDetail.id %>"><i class="pl-2 fa-solid fa-pen-to-square text-white"></i></a>
            </div>
            <div class="text-white px-10 py-3">
                <p class="font-semibold pb-3">Your election has <%=questions.length%> questions in the ballot.</p>
                <a href="/manage-questions/<%= electionDetail.id %>" class="font-medium text-purple-400 hover:text-purple-500 ">Manage Questions</a>
                <p class="font-semibold pt-3">Your election has <%=voters.length%> registered voters.</p>
                <div class="pt-3">
                    <a href="/register-voters/<%= electionDetail.id %>" class="font-medium text-purple-400 hover:text-purple-500 block">Add Voters</a>
                    <p class="pt-2"><a href="/launch-election/<%=electionDetail.id%>" class="font-medium text-purple-400 hover:text-purple-500">Launch election</a></p>
                </div>
                <div>
                    <%if (voters.length == 0) {%>
                        <p class="font-semibold text-white text-xl pt-10">Add voters to see them here.</p>
                    <%}%>
                    <%if (voters.length != 0) {%>
                        <p class="font-semibold text-white text-xl pt-10">Added voters</p>
                        <% for(var i=0; i<voters.length; i++) { %>
                            <div>
                                <p class="font-medium text-white pt-2 inline"><%=voters[i].id%></p>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
<%- include('bottomHTML.ejs') %>